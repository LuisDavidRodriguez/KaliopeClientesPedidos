<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inicioFragment">


    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.kaliopeclientespedidos.fragments.PrimerFragment"
        tools:layout="@layout/fragment_primer"
        android:label="@string/first_fragment_label"/>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.kaliopeclientespedidos.fragments.SegundoFragment"
        tools:layout="@layout/fragment_segundo"
        android:label="@string/second_fragment_label">
        <action
            android:id="@+id/action_SecondFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_tercerFragment"
            app:destination="@id/tercerFragment" />
    </fragment>



    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.kaliopeclientespedidos.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_inicioFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>



    <fragment
        android:id="@+id/tercerFragment"
        android:name="com.example.kaliopeclientespedidos.TercerFragment"
        android:label="fragment_tercer"
        tools:layout="@layout/fragment_tercer" >
        <action
            android:id="@+id/action_tercerFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
    </fragment>
</navigation>
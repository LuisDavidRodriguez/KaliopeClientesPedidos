<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="15dp"
    app:cardElevation="4dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        android:id="@+id/item_container_producto_LinearLayout"
        >

        <ImageView
            android:id="@+id/item_container_producto_image"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/item_container_producto_textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudadera mujer"
            android:textColor="@color/colorBlack"
            android:layout_gravity="left"
            android:textSize="17sp"
            />



            <TextView
                android:id="@+id/item_container_producto_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="599"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="italic" />







        <TextView
            android:id="@+id/item_container_producto_existencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Existencias:"
            android:layout_gravity="start"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mod:"
                android:layout_gravity="start"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/item_container_producto_modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sm5898"
                android:layout_gravity="start"
                android:textSize="12dp"/>

        </LinearLayout>








    </LinearLayout>

</androidx.cardview.widget.CardView>
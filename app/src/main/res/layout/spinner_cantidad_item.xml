<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:theme="@style/AppTheme"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/cuadro_redondeado_spinner"
    android:id="@+id/relativeLayoutTallasItem"
    >


    <TextView
        android:id="@+id/spinner_cantidad_item_TextViewTalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/relativeLayout1"
        android:text="G"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:background="@drawable/cuadro_redondeado"
        />

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        >


        <TextView
            android:id="@+id/spinner_tallas_item_TextViewExistencias"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Agotado en este color"
            android:textSize="18sp"/>

    </LinearLayout>





</RelativeLayout>